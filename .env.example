# Home Assistant Configuration
# Copy this file to .env and fill in your actual values
# .env is gitignored and will not be committed

# Your Home Assistant URL (e.g., https://homeassistant.local:8123 or https://your-instance.duckdns.org)
HASS_URL="https://your-homeassistant-url.com"

# Your long-lived access token from Home Assistant
# Generate at: Profile -> Security -> Long-Lived Access Tokens
HASS_TOKEN="your_long_lived_access_token_here"

# Kubernetes namespace where Home Assistant is deployed (optional)
# Only needed if using k8s commands
K8S_NAMESPACE="home-automation"
